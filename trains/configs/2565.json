{
    "train_type": "form",
    "treebank": "v2.8",
    "experiment": "v2.8",
    "name": "form",
    "n_gpu": 1,
    "model": {
        "type": "MultiParser",
        "args": {
            "embeddings_processor": {
                "type": "XLMRobertaWrapper",
                "args": {
                    "model_path": "/clusterusers/furkan.akkurt@boun.edu.tr/eval-ud/xlm-roberta-base",
                    "fine_tune": true,
                    "hidden_dropout": 0.2,
                    "attn_dropout": 0.2,
                    "output_dropout": 0.5,
                    "scalar_mix_layer_dropout": 0.1,
                    "token_mask_prob": 0.15
                }
            },
            "outputs": {
                "ufeats": {
                    "type": "SequenceTagger",
                    "args": {
                        "hidden_size": 0,
                        "input_dropout": 0.2,
                        "vocab": {
                            "type": "BasicVocab",
                            "args": {
                                "vocab_filename": "/clusterusers/furkan.akkurt@boun.edu.tr/eval-ud/gitlab-repo/trains/vocabs/v2.8/feats.vocab"
                            }
                        }
                    }
                },
                "lemma": {
                    "type": "SequenceTagger",
                    "args": {
                        "hidden_size": 0,
                        "input_dropout": 0.2,
                        "vocab": {
                            "type": "BasicVocab",
                            "args": {
                                "vocab_filename": "/clusterusers/furkan.akkurt@boun.edu.tr/eval-ud/gitlab-repo/trains/vocabs/v2.8/lemma.vocab"
                            }
                        }
                    }
                },
                "upos": {
                    "type": "SequenceTagger",
                    "args": {
                        "hidden_size": 0,
                        "input_dropout": 0.2,
                        "vocab": {
                            "type": "BasicVocab",
                            "args": {
                                "vocab_filename": "/clusterusers/furkan.akkurt@boun.edu.tr/eval-ud/gitlab-repo/trains/vocabs/v2.8/pos.vocab"
                            }
                        }
                    }
                },
                "heads": {
                    "type": "ArcScorer",
                    "args": {
                        "scorer_class": "DeepBiaffineScorer",
                        "head_mode": "single_head",
                        "hidden_size": 1024,
                        "dropout": 0.33,
                        "vocab": {
                            "type": "IntegerVocab"
                        }
                    }
                },
                "labels": {
                    "type": "DependencyClassifier",
                    "args": {
                        "scorer_class": "DeepBiaffineScorer",
                        "hidden_size": 256,
                        "dropout": 0.33,
                        "vocab": {
                            "type": "BasicVocab",
                            "args": {
                                "vocab_filename": "/clusterusers/furkan.akkurt@boun.edu.tr/eval-ud/gitlab-repo/trains/vocabs/v2.8/deprel.vocab"
                            }
                        }
                    }
                },
                "form": {
                    "type": "SequenceTagger",
                    "args": {
                        "hidden_size": 0,
                        "input_dropout": 0.2,
                        "vocab": {
                            "type": "BasicVocab",
                            "args": {
                                "vocab_filename": "/clusterusers/furkan.akkurt@boun.edu.tr/eval-ud/gitlab-repo/trains/vocabs/v2.8/form.vocab"
                            }
                        }
                    }
                }
            },
            "post_processors": [
                {
                    "type": "FactorizedMSTPostProcessor",
                    "args": {
                        "annotation_ids": [
                            "heads",
                            "labels"
                        ]
                    }
                }
            ]
        }
    },
    "data_loaders": {
        "type": "BucketedCONLLLoader",
        "args": {
            "annotation_layers": {
                "ufeats": {
                    "type": "TagSequence",
                    "source_column": 5,
                    "args": {
                        "ignore_root": true
                    }
                },
                "lemma": {
                    "type": "TagSequence",
                    "source_column": 2,
                    "args": {
                        "ignore_root": true
                    }
                },
                "upos": {
                    "type": "TagSequence",
                    "source_column": 3,
                    "args": {
                        "ignore_root": true
                    }
                },
                "heads": {
                    "type": "TagSequence",
                    "source_column": 6,
                    "args": {
                        "ignore_root": true
                    }
                },
                "labels": {
                    "type": "DependencyMatrix",
                    "source_column": [
                        6,
                        7
                    ],
                    "args": {
                        "ignore_non_relations": true
                    }
                },
                "form": {
                    "type": "TagSequence",
                    "source_column": 1,
                    "args": {
                        "ignore_root": true
                    }
                }
            },
            "batch_size": 32,
            "bucket_size": 512,
            "max_tokens_per_batch": 156800,
            "num_workers": 2
        },
        "paths": {
            "train": "/clusterusers/furkan.akkurt@boun.edu.tr/eval-ud/gitlab-repo/trains/tbs/v2.8/train.conllu",
            "dev": "/clusterusers/furkan.akkurt@boun.edu.tr/eval-ud/gitlab-repo/trains/tbs/v2.8/dev.conllu",
            "test": "/clusterusers/furkan.akkurt@boun.edu.tr/eval-ud/gitlab-repo/trains/tbs/v2.8/test.conllu"
        }
    },
    "trainer": {
        "min_epochs": 15,
        "max_epochs": 3000,
        "early_stop": 15,
        "save_dir": "/clusterusers/furkan.akkurt@boun.edu.tr/eval-ud/trained_models/",
        "save_period": 20,
        "verbosity": 2,
        "validation_criterion": {
            "metrics": {
                "form": "fscore"
            },
            "weighting": "multiplicative"
        },
        "optimizer": {
            "type": "AdamW",
            "args": {
                "lr": 4e-05,
                "weight_decay": 0.0
            }
        },
        "lr_scheduler": {
            "type": "LambdaLR",
            "args": {
                "lr_lambda": "SqrtSchedule(400)"
            }
        },
        "loss": {
            "type": "CrossEntropyLoss",
            "args": {
                "ignore_index": -1
            }
        },
        "loss_scaling": {
            "upos": "lambda epoch: 0.05",
            "ufeats": "lambda epoch: 0.05",
            "lemma": "lambda epoch: 0.05",
            "heads": "lambda epoch: 0.05",
            "labels": "lambda epoch: 0.05"
        }
    }
}