{
    "experiment": "boun_treebank_v2.8",
    "name": "pos_only_baseline",
    "n_gpu": 1,

    "model": {
        "type": "MultiParser",
        "args": {
            "embeddings_processor": {
                "type": "XLMRobertaWrapper",
                "args": {
                    "model_path": "xlm-roberta-base",
                    "fine_tune": true,
                    "hidden_dropout": 0.2,
                    "attn_dropout": 0.2,
                    "output_dropout": 0.5,
                    "scalar_mix_layer_dropout": 0.1,
                    "token_mask_prob": 0.15
                }
            },

            "outputs": {
                "ufeats": {
                    "type": "SequenceTagger",
                    "args": {
                        "hidden_size": 0,
                        "input_dropout": 0.2,
                        "vocab": {
                            "type": "BasicVocab",
                            "args": {
                                "vocab_filename": "/clusterusers/furkan.akkurt@boun.edu.tr/eval-ud/gitlab-repo/trains/pos-only/vocabs/v2.8_pos.vocab"
                            }
                        }
                    }
                }
            },
            "post_processors": []
        }
    },

    "data_loaders": {
        "type": "BucketedCONLLLoader",

        "args": {
            "annotation_layers": {
                "ufeats": {
                    "type": "TagSequence",
                    "source_column": 3,
                    "args": {
                        "ignore_root": true
                    }
                }
            },

            "batch_size": 32,
            "bucket_size": 512,
            "max_tokens_per_batch": 156800,
            "num_workers": 2
        },
        "paths": {
            "train": "/clusterusers/furkan.akkurt@boun.edu.tr/eval-ud/gitlab-repo/tr_boun/v2.8/train.conllu",
            "dev": "/clusterusers/furkan.akkurt@boun.edu.tr/eval-ud/gitlab-repo/tr_boun/v2.8/dev.conllu",
            "test": "/clusterusers/furkan.akkurt@boun.edu.tr/eval-ud/gitlab-repo/tr_boun/v2.8/test.conllu"
        }
    },

    "trainer": {
        "min_epochs": 15,
        "max_epochs": 300,
        "early_stop": 15,

        "save_dir": "/clusterusers/furkan.akkurt@boun.edu.tr/eval-ud/trained_models/",
        "save_period": 20,
        "verbosity": 2,

        "validation_criterion": {
            "metrics": {
                "ufeats": "fscore"
            },
            "weighting": "multiplicative"
        },

        "optimizer": {
            "type": "AdamW",
            "args": {
                "lr": 4e-5,
                "weight_decay": 0.0
            }
        },

        "lr_scheduler": {
            "type": "LambdaLR",
            "args": {
                "lr_lambda": "SqrtSchedule(400)"
            }
        },

        "loss": {
            "type": "CrossEntropyLoss",
            "args": {
                "ignore_index": -1
            }
        }
    }
}
